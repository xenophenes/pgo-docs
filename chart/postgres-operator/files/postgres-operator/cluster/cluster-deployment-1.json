{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "{{.Name}}",
        "labels": {
            {{.OperatorLabels }}
        }
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "{{.Name}}",
                    "primary": "true",
                    "pg-cluster": "{{.ClusterName}}"
                }
            },
            "spec": {

                {{.SecurityContext }}

                "containers": [{
                    "name": "database",
                    "image": "crunchydata/crunchy-postgres:{{.CCPImageTag}}",
                    "readinessProbe": {
                        "exec": {
                            "command": [
                                "/opt/cpm/bin/readiness.sh"
                            ]
                        },
                        "initialDelaySeconds": 15,
                        "timeoutSeconds": 8
                    },
                    "env": [{
                        "name": "PG_PRIMARY_PORT",
                        "value": "{{.Port}}"
                    }, {
                        "name": "PG_MODE",
                        "value": "primary"
                    }, {
                        "name": "PGDATA_PATH_OVERRIDE",
                        "value": "{{.DataPathOverride}}"
                    }, {
                        "name": "BACKUP_PATH",
                        "value": "{{.BackupPath}}"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "{{.Database}}"
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }],
                    "volumeMounts": [{
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }, {
                            "mountPath": "/backup",
                            "name": "backup",
                            "readOnly": true
                        }, {
                            "mountPath": "/pguser",
                            "name": "user-volume"
                        }, {
                            "mountPath": "/pgprimary",
                            "name": "primary-volume"
                        }, {
                            "mountPath": "/pgroot",
                            "name": "root-volume"
                        }

                    ],

                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "resources": {},
                    "imagePullPolicy": "IfNotPresent"
                }],
                "volumes": [{
                        "name": "pgdata",
                        {{.PVCName}}
                    }, {
                        "name": "backup",
                        {{.BackupPVCName}}
                    }, {
                        "name": "user-volume",
                        "secret": {
                            "secretName": "{{.UserSecretName}}"
                        }
                    }, {
                        "name": "primary-volume",
                        "secret": {
                            "secretName": "{{.PrimarySecretName}}"
                        }
                    }, {
                        "name": "root-volume",
                        "secret": {
                            "secretName": "{{.RootSecretName}}"
                        }
                    }

                ],

		{{.NodeSelector}}

                "restartPolicy": "Always",
                "dnsPolicy": "ClusterFirst"
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}
