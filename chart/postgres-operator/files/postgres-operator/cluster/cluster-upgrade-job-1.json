{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "name": "upgrade-{{.Name}}"
    },
    "spec": {
        "template": {
            "metadata": {
                "name": "{{.Name}}",
                "labels": {
                    "pgupgrade": "true",
                    "pg-database": "{{.Name}}"
                }
            },
            "spec": {
                "volumes": [{
                    "name": "pgolddata",
                    "persistentVolumeClaim": {
                        "claimName": "{{.OldPVCName}}"
                    }
                }, {
                    "name": "pgnewdata",
                    "persistentVolumeClaim": {
                        "claimName": "{{.NewPVCName}}"
                    }
                }],

		{{.SecurityContext}}

                "containers": [{
                    "name": "upgrade",
                    "image": "crunchydata/crunchy-upgrade:{{.CCPImageTag}}",
                    "volumeMounts": [{
                        "mountPath": "/pgolddata",
                        "name": "pgolddata",
                        "readOnly": false
                    }, {
                        "mountPath": "/pgnewdata",
                        "name": "pgnewdata",
                        "readOnly": false
                    }],
                    "env": [{
                        "name": "OLD_DATABASE_NAME",
                        "value": "{{.OldDatabaseName}}"
                    }, {
                        "name": "NEW_DATABASE_NAME",
                        "value": "{{.NewDatabaseName}}"
                    }, {
                        "name": "OLD_VERSION",
                        "value": "{{.OldVersion}}"
                    }, {
                        "name": "NEW_VERSION",
                        "value": "{{.NewVersion}}"
                    }]
                }],
                "restartPolicy": "Never"
            }
        }
    }
}
