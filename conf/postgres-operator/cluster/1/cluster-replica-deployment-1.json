{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "{{.Name}}"
    },
    "spec": {
        "replicas": {{.Replicas}},
        "template": {
            "metadata": {
                "labels": {
	        {{.OperatorLabels}}
                }
            },
            "spec": {

	    	{{.SecurityContext}}

                "containers": [{
                    "name": "database",
                    "image": "{{.CCPImagePrefix}}/crunchy-postgres:{{.CCPImageTag}}",
		    {{.ContainerResources }}

                    "env": [{
                        "name": "PG_PRIMARY_PORT",
                        "value": "{{.Port}}"
                    }, {
                        "name": "PG_PRIMARY_HOST",
                        "value": "{{.PrimaryHost}}"
                    }, {
                        "name": "PG_MODE",
                        "value": "replica"
                    }, {
                        "name": "PG_LOCALE",
                        "value": "en_US.UTF8"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "{{.Database}}"
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }],
                    "volumeMounts": [
		    {
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }, {
			"mountPath": "/pguser",
			"name": "user-volume"
			}, {
			"mountPath": "/pgprimary",
			"name": "primary-volume"
			}, {
			"mountPath": "/pgroot",
			"name": "root-volume"
			}, {
			"mountPath": "/pgwal",
			"name": "pgwal-volume"
			}, {
			"mountPath": "/pgconf",
			"name": "pgconf-volume"
			}, {
			"mountPath": "/recover",
			"name": "recover-volume"
			}, {
			"mountPath": "/backrestrepo",
			"name": "backrestrepo-volume"
			}
		    ],

                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "resources": {},
                    "imagePullPolicy": "IfNotPresent"
                }],
                "volumes": [
		{
                    "name": "pgdata",
		    "emptyDir": {}
                }, {
		  	"name": "user-volume",
			"secret": {
			"secretName": "{{.UserSecretName}}"
			}
		}, {
			"name": "primary-volume",
			"secret": {
			"secretName": "{{.PrimarySecretName}}"
			}
		}, {
			"name": "root-volume",
			"secret": {
			"secretName": "{{.RootSecretName}}"
			}
                    }, {
                        "name": "pgwal-volume",
                        "emptyDir": { "medium": "Memory" }
                    }, {
                        "name": "backrestrepo-volume",
                        "emptyDir": { "medium": "Memory" }
                    }, {
                        "name": "recover-volume",
                        "emptyDir": { "medium": "Memory" }
                    }, {
                        "name": "pgconf-volume",
                        "emptyDir": { "medium": "Memory" }
                    }

		],

		{{.NodeSelector}}

                "restartPolicy": "Always",
                "dnsPolicy": "ClusterFirst"
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}
