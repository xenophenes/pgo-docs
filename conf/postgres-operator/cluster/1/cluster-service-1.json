{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "{{.Name}}",
        "labels": {
            "pg-cluster": "{{.ClusterName}}",
            "name": "{{.Name}}"
        }
    },
    "spec": {
        "ports": [
	{
	     "name": "postgres",
            "protocol": "TCP",
            "port": {{.Port}},
            "targetPort": {{.Port}},
            "nodePort": 0
        }, {
	     "name": "node-exporter",
	"protocol": "TCP",
	"port": 9100,
	"targetPort": 9100,
	"nodePort": 0
	}, {
	"name": "postgres-exporter",
	"protocol": "TCP",
	"port": 9187,
	"targetPort": 9187,
	"nodePort": 0
	}
	],
        "selector": {
            "name": "{{.Name}}"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}
